# --- Compiler and flags ---
CC = gcc
CFLAGS = -Wall -Wextra -pthread

# --- Targets ---
# The final executable name
TARGET = test_main

# Object files
OBJS = test_main.o thread_helper.o

# --- Build rules ---
# Default target
all: $(TARGET)

# Link object files into the executable
$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $(OBJS)

# Compile source files into object files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean up build files
clean:
	rm -f $(OBJS) $(TARGET)
